<Page
    x:Class="StepinFlow.Views.Pages.FlowsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:UserControls="clr-namespace:StepinFlow.Views.UserControls"
    xmlns:assets="clr-namespace:StepinFlow.Behavior"
    xmlns:behavior="clr-namespace:StepinFlow.Behavior"
    xmlns:converters="clr-namespace:StepinFlow.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:Model.Enums;assembly=Model"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:icons="https://github.com/helluvamatt/BootstrapIcons.Wpf/"
    xmlns:local="clr-namespace:StepinFlow.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Model.Models;assembly=Model"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="FlowsPage"
    d:DataContext="{d:DesignInstance local:FlowsPage,
    IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:EventParammeterConverter x:Key="EventParammeterConverter" />

        <converters:TreeviewOrdering x:Key="TreeviewOrdering" />
        <ObjectDataProvider
            x:Key="FlowStepTypesEnum"
            MethodName="GetValues"
            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enum:FlowStepTypesEnum" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <Grid VerticalAlignment="Top">

        <!--  Grid Definition  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.6*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  Treeview Toolbar Buttons Expand/Collapse/Add/Refresh  -->
        <StackPanel
            Grid.ColumnSpan="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Label VerticalAlignment="Center" Content="Coppied FlowStep ID: " />
            <Label VerticalAlignment="Center" Content="{Binding ViewModel.CoppiedFlowStepId}" />
            <ui:Button Margin="10" IsEnabled="true">

                <icons:BootstrapIcon
                    Width="20"
                    Height="20"
                    Icon="ArrowsExpand" />

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonExpandAllClickCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </ui:Button>
            <ui:Button Margin="10" IsEnabled="true">

                <icons:BootstrapIcon
                    Width="20"
                    Height="20"
                    Icon="ArrowsCollapse" />

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonCollapseAllClickCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </ui:Button>

            <ui:Button
                Margin="10"
                Content="Add flow"
                IsEnabled="true">
                <Button.Effect>
                    <DropShadowEffect Opacity="1" ShadowDepth="3" />
                </Button.Effect>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonAddFlowClickCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ui:Button>
            <ui:Button Margin="10" IsEnabled="true">

                <icons:BootstrapIcon
                    Width="20"
                    Height="20"
                    Icon="ArrowRepeat" />

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonSyncClickCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </ui:Button>
            <ui:Button Margin="10" IsEnabled="true">

                <icons:BootstrapIcon
                    Width="20"
                    Height="20"
                    Icon="LockFill" />

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonLockClickCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </ui:Button>

        </StackPanel>


        <!--  Frame  -->
        <Border
            Grid.Row="1"
            Margin="0,0,20,0"
            Padding="10,20,0,0"
            Background="#272727"
            BorderBrush="#C4C4C4"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="1" ShadowDepth="5" />
            </Border.Effect>
            <ScrollViewer>
                <Frame
                    x:Name="UIFlowStepTypeSelectionFrame"
                    Padding="10,0,10,30"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.VerticalScrollBarVisibility="Visible" />
            </ScrollViewer>
        </Border>





        <!--  TreeView  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Background="#272727"
            BorderBrush="#C4C4C4"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="1" ShadowDepth="5" />
            </Border.Effect>
            <UserControls:TreeViewUserControl OnFlowStepClone="OnFlowStepClone" OnSelectedFlowStepIdChange="OnSelectedFlowStepIdChange" OnAddFlowStepClick="OnAddFlowStepClick" />
        </Border>

    </Grid>
</Page>


