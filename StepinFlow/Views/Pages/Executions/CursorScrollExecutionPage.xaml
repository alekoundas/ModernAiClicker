<Page
    x:Class="StepinFlow.Views.Pages.Executions.CursorScrollExecutionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:Model.Enums;assembly=Model"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:StepinFlow.Views.Pages.Executions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CursorScrollExecutionPage"
    d:DataContext="{d:DesignInstance local:CursorScrollExecutionPage,
    IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <StackPanel>

        <Label>Configure click action</Label>


        <Grid Margin="10,10,10,50">

            <Grid.Resources>

                <ObjectDataProvider
                    x:Key="MouseScrollDirectionEnum"
                    MethodName="GetValues"
                    ObjectType="{x:Type System:Enum}">
                    <ObjectDataProvider.MethodParameters>
                        <x:Type TypeName="enum:MouseScrollDirectionEnum" />
                    </ObjectDataProvider.MethodParameters>
                </ObjectDataProvider>
                <ObjectDataProvider
                    x:Key="MouseButtonEnum"
                    MethodName="GetValues"
                    ObjectType="{x:Type System:Enum}">
                    <ObjectDataProvider.MethodParameters>
                        <x:Type TypeName="enum:MouseButtonsEnum" />
                    </ObjectDataProvider.MethodParameters>
                </ObjectDataProvider>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>








            <StackPanel>

                <Label>Scroll direction:</Label>
                <ComboBox ItemsSource="{Binding ViewModel.Execution.FlowStep.MouseScrollDirectionEnum}" SelectedItem="{Binding ViewModel.Execution.FlowStep.MouseScrollDirectionEnum}" />

                <Label>Scroll steps:</Label>
                <TextBox Text="{Binding ViewModel.Execution.FlowStep.MouseLoopTimes}" />

            </StackPanel>


        </Grid>


    </StackPanel>

</Page>