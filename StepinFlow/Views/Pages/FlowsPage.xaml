        <!--
        <ui:Button Margin="10" IsEnabled="true">
        <icons:BootstrapIcon
        Width="20"
        Height="20"
        Icon="LockFill" />
        <i:Interaction.Triggers>
        <i:EventTrigger EventName="Click">
        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonLockClickCommand}" />
        </i:EventTrigger>
        </i:Interaction.Triggers>
        </ui:Button>

        </StackPanel>-->


        <!--  Frame  -->
        <Border
            Grid.Row="1"
            Margin="0,0,20,0"
            Background="#272727"
            BorderBrush="#C4C4C4"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="1" ShadowDepth="5" />
            </Border.Effect>
            <ScrollViewer>
                <!--<Frame
                x:Name="UIFlowStepTypeSelectionFrame"
                Padding="10,0,10,30"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible" />-->
                <UserControls:FlowStepFrameUserControl Padding="20,20,20,20" />

            </ScrollViewer>
        </Border>





        <!--  TreeView  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Background="#272727"
            BorderBrush="#C4C4C4"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Opacity="1" ShadowDepth="5" />
            </Border.Effect>
            <UserControls:TreeViewUserControl
                OnAddFlowStepClick="OnAddFlowStepClick"
                OnFlowStepClone="OnFlowStepClone"
                OnSelectedFlowStepIdChange="OnSelectedFlowStepIdChange" />
        </Border>

    </Grid>
</Page>


