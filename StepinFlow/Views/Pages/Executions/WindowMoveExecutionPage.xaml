<Page
    x:Class="StepinFlow.Views.Pages.Executions.WindowMoveExecutionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:Model.Enums;assembly=Model"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:StepinFlow.Views.Pages.Executions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CursorClickExecutionPage"
    d:DataContext="{d:DesignInstance local:WindowMoveExecutionPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>



        <Grid Margin="10,10,10,50">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>







            <StackPanel>
                <Label>Change application window location.</Label>
                <Label>Select application window to relocate:</Label>
                <ComboBox ItemsSource="{Binding ProcessList}" SelectedItem="{Binding Execution.FlowStep.ProcessName}" />
            </StackPanel>



            <Label Grid.Row="1" Margin="0,40,0,0">Set window location.</Label>

            <!--  X  -->
            <StackPanel Grid.Row="2">
                <Label>X:</Label>
                <TextBox Text="{Binding Execution.FlowStep.LocationX, Mode=TwoWay}" />
            </StackPanel>

            <!--  Y  -->
            <StackPanel Grid.Row="2" Grid.Column="3">
                <Label>Y:</Label>
                <TextBox Text="{Binding Execution.FlowStep.LocationY, Mode=TwoWay}" />
            </StackPanel>


        </Grid>



    </StackPanel>

</Page>