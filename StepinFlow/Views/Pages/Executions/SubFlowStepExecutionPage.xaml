<Page
    x:Class="StepinFlow.Views.Pages.Executions.SubFlowStepExecutionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:Model.Enums;assembly=Model"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:StepinFlow.Views.Pages.FlowStepDetail"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SubFlowStepExecutionPage"
    d:DataContext="{d:DesignInstance local:SubFlowStepExecutionPage,
    IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>

        <Label>Configure Sub-Flow step</Label>


        <Grid Margin="10,10,10,50">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>








            <StackPanel>
                <StackPanel
                    MinWidth="200"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left">
                    <Label>Sub-Flows:</Label>
                    <ComboBox
                        IsEnabled="{Binding ViewModel.IsEnabled}"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding ViewModel.SubFlows}"
                        SelectedItem="{Binding ViewModel.SelectedSubFlow, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Id}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Path=Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>


                </StackPanel>
                <StackPanel
                    MinWidth="200"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left">

                    <Label>Is sub flow a reference to original sub flow?</Label>
                    <CheckBox IsChecked="{Binding ViewModel.Execution.FlowStep.IsSubFlowReferenced, Mode=TwoWay}" IsEnabled="{Binding ViewModel.IsEnabled}" />
                </StackPanel>
            </StackPanel>
        </Grid>





    </StackPanel>

</Page>