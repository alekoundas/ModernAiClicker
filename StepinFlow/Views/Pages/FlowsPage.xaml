        <ui:Button Margin="3,0,0,0" IsEnabled="true">
        <icons:BootstrapIcon
        Width="20"
        Height="20"
        Icon="ArrowsCollapse" />
        <i:Interaction.Triggers>
        <i:EventTrigger EventName="Click">
        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonCollapseAllClickCommand}" />
        </i:EventTrigger>
        </i:Interaction.Triggers>
        </ui:Button>

        -->
        <!--  Add flow  -->
        <!--
        <ui:Button
        Margin="10,0,0,0"
        Content="Add flow"
        IsEnabled="true">
        <Button.Effect>
        <DropShadowEffect Opacity="1" ShadowDepth="3" />
        </Button.Effect>
        <i:Interaction.Triggers>
        <i:EventTrigger EventName="Click">
        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonAddFlowClickCommand}" />
        </i:EventTrigger>
        </i:Interaction.Triggers>
        </ui:Button>

        -->
        <!--  Refresh  -->
        <!--
        <ui:Button Margin="10" IsEnabled="true">
        <icons:BootstrapIcon
        Width="20"
        Height="20"
        Icon="ArrowRepeat" />
        <i:Interaction.Triggers>
        <i:EventTrigger EventName="Click">
        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonSyncClickCommand}" />
        </i:EventTrigger>
        </i:Interaction.Triggers>
        </ui:Button>

        -->
