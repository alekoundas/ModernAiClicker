        Icon="ArrowsExpand" />
        <i:Interaction.Triggers>
        <i:EventTrigger EventName="Click">
        <i:InvokeCommandAction Command="{Binding ViewModel.ButtonExpandAllClickCommand}" />
        </i:EventTrigger>
        </i:Interaction.Triggers>
        </ui:Button>

        -->
